{
	"compilerOptions": {
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"module": "NodeNext",
		"skipLibCheck": true,
		"strict": true,
		"target": "ES6",
		"allowJs": true,
    "allowImportingTsExtensions": true,
    "noEmit": true
	},
	"include": [
		"./src/**/*.ts",
		"./src/**/*.js",
		"__tests__/**/*.ts",
		"__tests__/**/*.js"
	],
	"exclude": ["node_modules", "./dist/**/*"],
	"ts-node": {
		"transpileOnly": true
	}
}
